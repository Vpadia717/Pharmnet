<!-- This section displays the login and registration forms for users. -->
<section id="aa-myaccount">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="aa-myaccount-area">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="aa-myaccount-login">
                                <h4>Login</h4>
                                <!-- Form for user login -->
                                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "aa-login-form" }))
                                {
                                    <!-- Input field for username or email address -->
                                    <label for="">Username or Email address<span>*</span></label>
                                    <input name="UserName" type="text" required placeholder="Username" class="img-rounded">

                                    <!-- Input field for password -->
                                    <label for="">Password<span>*</span></label>
                                    <input name="Password" type="password" required placeholder="Password" class="img-rounded">

                                    <!-- Submit button for user login -->
                                    <button type="submit" class="aa-browse-btn">Login</button>
                                }

                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="aa-myaccount-register">
                                <h4>Register</h4>

                                <!-- Form for user registration -->
                                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "aa-login-form" }))
                                {
                                    <!-- Input field for first name -->
                                    <label for="">First Name<span>*</span></label>
                                    <input name="First_Name" type="text" placeholder="Enter first name" class="img-rounded">

                                    <!-- Input field for last name -->
                                    <label for="">Last Name<span>*</span></label>
                                    <input name="Last_Name" type="text" placeholder="Enter last name" class="img-rounded">

                                    <!-- Input field for username -->
                                    <label for="">Username<span>*</span></label>
                                    <input name="UserName" type="text" placeholder="Username" class="img-rounded">

                                    <!-- Input field for password -->
                                    <label for="">Password<span>*</span></label>
                                    <input name="Password" type="password" placeholder="Password" class="img-rounded">

                                    <!-- Input field for email -->
                                    <label for="">Email<span>*</span></label>
                                    <input name="Email" type="text" placeholder="Enter your email" class="img-rounded">

                                    <!-- Input field for mobile -->
                                    <label for="">Mobile<span>*</span></label>
                                    <input name="Mobile1" type="text" placeholder="Mobile" class="img-rounded">

                                    <!-- Input field for address -->
                                    <label for="">Address<span></span></label>
                                    <input name="Address1" type="text" placeholder="Address" class="img-rounded">

                                    <!-- Submit button for user registration -->
                                    <button type="submit" class="aa-browse-btn">Register</button>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- / Login view section -->